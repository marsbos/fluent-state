{
  "name": "fluent-state",
  "version": "1.0.0",
  "description": "A fluent, immutable, deeply reactive local state management tool for React",
  "type": "module",
  "main": "./dist/index.esm.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "clean": "rm -rf dist",
    "release": "npm version patch && npm run build && git push && git push --tags && npm publish",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "react",
    "state",
    "fluent",
    "immutable",
    "proxy",
    "react-state",
    "state-management",
    "react-hook"
  ],
  "author": "M. Bos",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
